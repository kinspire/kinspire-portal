{
  "name": "kinspire-portal",
  "description": "A desktop portal for the students in Kinspire's orphanages to use to access learning materials.",
  "version": "0.1.0",
  "author": {
    "name": "Sarang Joshi",
    "email": "sarangjoshi@kinspire.org"
  },
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "classnames": "^2.2.6",
    "electron-better-ipc": "^1.0.1",
    "electron-is-dev": "^1.1.0",
    "firebase": "^7.5.2",
    "loglevel": "^1.6.8",
    "node-fetch": "^2.6.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "sweetalert": "^2.1.2",
    "typeface-montserrat": "^0.0.75",
    "typeface-rajdhani": "^0.0.72"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/history": "^4.7.3",
    "@types/lodash": "^4.14.149",
    "@types/loglevel": "^1.6.3",
    "@types/node": "12",
    "@types/node-fetch": "^2.5.7",
    "@types/react-router-dom": "^5.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.5.3",
    "electron": "^7.1.5",
    "electron-builder": "^22.5.1",
    "electron-reload": "^1.5.0",
    "file-loader": "^6.0.0",
    "gh-pages": "^2.1.1",
    "html-webpack-plugin": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^7.0.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3",
    "wait-on": "^3.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "clean-desktop": "rimraf ./dist",
    "desktop": "run-p watch electron",
    "electron": "wait-on ./dist/electron/main.js && electron .",
    "watch": "tsc -w --project tsconfig.desktop.json",
    "build:client": "webpack --mode=production",
    "build:desktop": "tsc --project tsconfig.desktop.json",
    "build": "run-p build:client build:desktop",
    "start:client": "cross-env BROWSER=none webpack-dev-server -d",
    "start:desktop": "run-s clean-desktop desktop",
    "start": "run-p start:client start:desktop",
    "prepack": "run-s build",
    "pack": "electron-builder --dir",
    "predist": "run-s build",
    "dist": "electron-builder"
  },
  "homepage": "./",
  "main": "./dist/electron/main.js",
  "build": {
    "appId": "org.kinspire.kinspire-portal",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "engines": {
    "node": "^12.x.x"
  }
}
