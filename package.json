{
  "name": "kinspire-portal",
  "description": "A desktop portal for the students in Kinspire's orphanages to use to access learning materials.",
  "version": "0.1.0",
  "author": {
    "name": "Sarang Joshi",
    "email": "sarangjoshi@kinspire.org"
  },
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.1.0",
    "firebase": "^7.5.2",
    "loglevel": "^1.6.8",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "sweetalert": "^2.1.2",
    "typeface-montserrat": "^0.0.75",
    "typeface-rajdhani": "^0.0.72"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/history": "^4.7.3",
    "@types/lodash": "^4.14.149",
    "@types/loglevel": "^1.6.3",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-router-dom": "^5.1.0",
    "craco": "^0.0.3",
    "cross-env": "^6.0.3",
    "electron": "^7.1.5",
    "electron-builder": "^22.5.1",
    "electron-reload": "^1.5.0",
    "gh-pages": "^2.1.1",
    "grpc": "1.24.2",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.6.4",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "test": "craco test",
    "eject": "craco eject",
    "electron": "wait-on ./dist/main.js && electron .",
    "watch": "tsc -w --project tsconfig.server.json",
    "build:client": "craco build",
    "build:desktop": "tsc --project tsconfig.server.json",
    "build": "run-p build:client build:desktop",
    "start:client": "cross-env BROWSER=none craco start",
    "start:desktop": "run-p watch electron",
    "start": "run-p start:client start:desktop",
    "prepack": "run-s build",
    "pack": "electron-builder --dir",
    "predist": "run-s build",
    "dist": "electron-builder"
  },
  "homepage": "./",
  "main": "./dist/main.js",
  "build": {
    "appId": "org.kinspire.kinspire-portal",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
